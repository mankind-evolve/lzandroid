<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/px_570"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buyadddialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_70"
            android:background="@drawable/lz_button_halftop"
            android:gravity="center"
            android:text="新增"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_32"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lz_border_bottom"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buyadddialog_img"
                android:layout_width="@dimen/px_290"
                android:layout_height="@dimen/px_290"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:src="@drawable/lz_buy_takephoto"/>

            <!--名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:background="@drawable/lz_border_bottom"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/px_10"
                    android:layout_marginLeft="@dimen/px_10"
                    android:textColor="@color/m_text_main"
                    android:textSize="@dimen/text_size_28"
                    android:text="名称:"/>

                <EditText
                    android:id="@+id/buyadddialog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入菜品名称"
                    android:textColor="@color/m_text_hint"
                    android:textSize="@dimen/text_size_28"
                    android:text=""/>

            </LinearLayout>

            <!--名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:background="@drawable/lz_border_bottom"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_marginRight="@dimen/px_10"
                    android:textColor="@color/m_text_main"
                    android:textSize="@dimen/text_size_28"
                    android:text="数量(斤):"/>

                <EditText
                    android:id="@+id/buyadddialog_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入数量"
                    android:textSize="@dimen/text_size_28"
                    android:textColor="@color/m_text_hint"
                    android:text=""/>

            </LinearLayout>

            <!--名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_96"
                android:background="@drawable/lz_border_bottom"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_marginRight="@dimen/px_10"
                    android:textColor="@color/m_text_main"
                    android:textSize="@dimen/text_size_28"
                    android:text="价格(元):"/>

                <EditText
                    android:id="@+id/buyadddialog_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入价格"
                    android:textSize="@dimen/text_size_28"
                    android:textColor="@color/m_text_hint"
                    android:text=""/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:background="@drawable/lz_button_halfbottom_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buyadddialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="取 消"
                android:textColor="@color/m_main_color"
                android:textSize="@dimen/text_size_32"
                />

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/m_cutline"/>

            <TextView
                android:id="@+id/buyadddialog_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="保 存"
                android:textColor="@color/m_main_color"
                android:textSize="@dimen/text_size_32"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>