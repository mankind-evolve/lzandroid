<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/listviewdialog_ll"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/px_330"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listviewdialog_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_70"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_32"
            android:text="title"
            android:gravity="center"
            android:background="@drawable/lz_button_halftop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/lz_button_halfbottom">
            <ListView
                android:id="@+id/listviewdialog_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@null"
                android:divider="@null"/>
            <Button
                android:id="@+id/listviewdialog_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@drawable/lz_button_bg_blue"
                android:text="确定"
                style="@style/m_text_buttonwhite"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>